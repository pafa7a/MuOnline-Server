{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {
      "@/*": ["./*"],
    }
  },
  "include": ["src/**/*", "src/config/**/*.json"],
  "exclude": ["node_modules", "build"]
}